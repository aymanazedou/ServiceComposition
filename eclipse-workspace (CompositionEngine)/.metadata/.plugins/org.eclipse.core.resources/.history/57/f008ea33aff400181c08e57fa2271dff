package CE;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.Socket;

public class ComEngMain {

	public static void main(String[] args) {

		Socket socket;
		try {
			socket = new Socket("127.0.0.1", 5000);
			//while(true) {
				(new SendThread(socket)).start();
			//}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
//=======================================Create a send thread=========================
class SendThread extends Thread {
	String msg;
	Socket soc;
	BufferedReader in;
	PrintWriter out;
	InputStream inF;
	OutputStream outF;

	public SendThread (Socket soc) {
		this.soc=soc;
		try {
			
			out = new PrintWriter(soc.getOutputStream());
			in = new BufferedReader(new InputStreamReader(soc.getInputStream()));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	@Override
	public void run() {
		msg = "exist P1 P3";
		out.println(msg);
		out.flush();
		//=======receive the file===and the message=======
		try {
			byte[] b = new byte[1024*100];
			InputStream inStream = soc.getInputStream();
			FileOutputStream file = new FileOutputStream("/home/ayman/receiver.wsdl");
			inStream.read(b, 0, b.length);
			file.write(b, 0, b.length);

			msg = in.readLine();
		//===================================
		} catch (IOException e) {
			e.printStackTrace();
		}
		System.out.println("Annuaire : " + msg);

	}




}



